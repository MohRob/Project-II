@model Ibn_Sina_Diagnostic_Center.Models.Apointment

@{
    ViewBag.Title = "Appointment";
}

<h2>Appointment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Apointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })


            <div class="col-md-10">

                <input type="text"  name="UserName" class="form-control" value="@Session["UserName"]" readonly />
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorName, htmlAttributes: new { @class = "control-label col-md-2" })


            <div class="col-md-10">

                <input type="text"  name="DoctorName" class="form-control" value="@Session["DoctorName"]" readonly />
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })


            <div class="col-md-10">

                <input type="text"  name="Phone" class="form-control" value="@Session["Phone"]" readonly />
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })


            <div class="col-md-10">

                <input type="Date"  name="Date" class="form-control" required />
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
